---
// import '@fontsource/source-serif-4'
import '@/styles/globals.css';
// import { Toaster } from 'react-hot-toast'; // Removed react-hot-toast
import { Toaster } from "@/components/ui/toaster"; // Use the new Toaster component

interface Props {
  title: string;
  description: string;
  ogimage: string;
}

const {title, description, ogimage} = Astro.props;
---

<!doctype html>
<html lang="en">
<head>
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg"/>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width"/>
    <meta name="description" content={description}/>
    <meta name="generator" content={Astro.generator}/>
    <meta property="og:description" content={description}/>
</head>
<body class="bg-white">
    <slot/>
    {/* <Toaster position="top-right" client:only="react" /> // Removed react-hot-toast Toaster */}
    <Toaster client:only="react" /> {/* Use the new Toaster component */}
</body>
</html>
